<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>ErrorOr.Extensions</PackageId>
        <Authors>Andreas Pfohl</Authors>
        <RepositoryUrl>https://github.com/apfohl/ErrorOrExtensions</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Owner>Andreas Pfohl</Owner>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>default</LangVersion>
        <RootNamespace>ErrorOrExtensions</RootNamespace>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="ErrorOr" Version="1.4.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
